# Atualizar IPs do Cloudflare semanalmente (Domingo às 3 da manhã)
0 3 * * 0 /opt/gitops/scripts/cloudflare/update-cloudflare-ips.sh

#Atualização de segurança mensal
0 4 1 * * /opt/gitops/scripts/update/safe-update.sh

# Monitoramento do Keepalived a cada minuto
* * * * * /opt/gitops/scripts/keepalived/check-services.sh

# Notificações do Keepalived (já configurado nos arquivos keepalived.conf)
# notify_master "/opt/gitops/scripts/keepalived/notify.sh master"
